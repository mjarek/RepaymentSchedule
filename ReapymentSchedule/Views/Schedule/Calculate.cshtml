@using ReapymentSchedule.Models;

@model Scheduler



@{
    ViewBag.Title = "";
}

<h2>Calculate</h2>
<table class="table">
   
    <tr>
        <th>LP</th>
        <th>Instalment Capital</th>
        <th>Instalment Interest</th>
        <th>Total instalment to pay</th>
        <th>Remaining capital</th>
        
    </tr>
    @foreach (var item in @Model.GetRepaymentSchedule())
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Capital</td>
            <td>@item.Interest</td>
            <td>@(item.Capital +item.Interest)</td>
            <td>@item.RemainingCapital</td>
        </tr>

    }
</table>



